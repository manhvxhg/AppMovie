<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_8"
    android:paddingLeft="@dimen/dp_8"
    android:paddingRight="@dimen/dp_8"
    android:paddingTop="@dimen/dp_8"
    android:clickable="true"
    >

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_390"
        android:layout_height="@dimen/dp_80"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_4"
        android:layout_marginEnd="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_12"
        app:cardCornerRadius="@dimen/dp_4"
        app:cardUseCompatPadding="true"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="@dimen/dp_8">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_6"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_12"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardUseCompatPadding="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1">

            <TextView
                android:id="@+id/date_time_reminder_all_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@android:color/black"
                app:layout_constraintLeft_toRightOf="@+id/poster_reminder_img"
                android:layout_marginLeft="@dimen/dp_8"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/dp_8"
                app:layout_constraintRight_toLeftOf="@+id/icon_img"
                android:layout_marginRight="@dimen/dp_8" />

            <TextView
                android:id="@+id/title_reminder_and_rating_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold|italic"
                app:layout_constraintLeft_toRightOf="@+id/poster_reminder_img"
                android:layout_marginLeft="@dimen/dp_8"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/dp_8"
                app:layout_constraintRight_toLeftOf="@+id/icon_img"
                android:layout_marginRight="@dimen/dp_8" />

            <ImageView
                android:id="@+id/poster_reminder_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_marginLeft="@dimen/dp_8"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/dp_8"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/dp_8" />

            <ImageView
                android:id="@+id/icon_img"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:srcCompat="@mipmap/ic_keyboard_arrow_right_black"
                android:layout_marginRight="@dimen/dp_8"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/dp_8"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/dp_8" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>